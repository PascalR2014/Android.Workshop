<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20sp"
    android:layout_marginRight="20sp"
    android:background="@android:color/white"
    android:backgroundTint="#d3d3d3"
    android:orientation="vertical"
    android:textColor="green"
    tools:context="com.example.android.singleappscreen.MainActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:scaleType="fitXY"
        android:src="@drawable/logo"/>

    <TextView
        android:id="@+id/para1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="20sp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="I can create your book cover \nlike you want !"

        android:textSize="25sp" />

    <TextView
        android:id="@+id/para2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="40sp"
        android:layout_weight="1"
        android:text="Ebook"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/para2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="80sp"
        android:layout_weight="1"
        android:text="Book"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/para2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="40sp"
        android:layout_weight="1"
        android:text="Advertising and many more ..."
        android:textColor=""
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/Photo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:scaleType="fitCenter"
        android:src="@drawable/designer"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:alpha="0.8"
        android:background="#babfb7"
        android:gravity="center"
        android:text="contact@gmail.com"
        android:textSize="21sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:alpha="0.8"
        android:background="#babfb7"
        android:gravity="center"
        android:text="www.misha.designer.com"
        android:textSize="21sp"
        android:textStyle="bold" />


</LinearLayout>